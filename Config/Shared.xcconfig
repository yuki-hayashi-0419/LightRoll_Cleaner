PRODUCT_NAME = LightRoll_Cleaner
PRODUCT_DISPLAY_NAME = LightRoll Cleaner
PRODUCT_BUNDLE_IDENTIFIER = com.lightroll.cleaner
MARKETING_VERSION = 1.0
CURRENT_PROJECT_VERSION = 1

// ==========================================
// Platform Configuration
// ==========================================
IPHONEOS_DEPLOYMENT_TARGET = 17.0

// (1 == iPhone, 2 == iPad)
TARGETED_DEVICE_FAMILY = 1,2

// ==========================================
// Info PLIST
